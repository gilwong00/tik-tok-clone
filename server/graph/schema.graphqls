# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Date

type User {
  id: ID!
  firstName: String!
  lastName: String!
  email: String!
  password: String!
  avatarUri: String!
  createdAt: Date!
  updatedAt: Date!
}

type Post {
  id: ID!
  userId: Int!
  description: String!
  uri: String!
  isActive: Boolean!
  createdAt: Date!
  updatedAt: Date!
}

type Query {
  userPosts(userId: ID!): [Post!]!
  post(userId: ID!): Post
  user(userId: ID!): User!
  getFeed(userId: ID!, page: Int!, limit: Int!): [Post!]!
}

input NewUser {
  firstName: String!
  lastName: String!
  email: String!
  password: String!
}

input AuthUser {
  email: String!
  password: String!
}

input NewPost {
  userId: ID!
  uri: String!
  description: String!
}

type Mutation {
  createUser(input: NewUser!): User!
  authUser(input: AuthUser!): User!
  createPost(input: NewPost!): Post!
}
